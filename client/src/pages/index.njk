{% extends "layouts/default.njk" %}
{% set title = "Home" %}
{% block content -%}
{% import 'macros/header.njk' as header -%}
{{header.nav('bg-black', 'border-dark', 'navbar-dark', 'home')}}
    <main id="content">

        <!-- Hero -->
        <div class="container py-5">
            <h1 class="display-2 pb-2"><span style="color: #00ff00">chris</span>young.io</h1>
            <hr class="border-3 border-white my-4 ml-0 text-left w-25" role="presentation">
            <div class="row">
                <div class="col-lg-8">
                    <p class="font-serif lead mb-4 text-secondary">
                    I'm not sure about that green.
                    </p>
                </div>
            </div>
            <a href="https://themes.getbootstrap.com/product/focus/" class="btn btn-primary">Contact</a>
        </div>

        <!-- Projects -->
        <div class="container py-4">
            <ul class="row list-unstyled">
                <li class="col-md-6 mb-3">
                    <a href="portfolio-1.html">
                        <figure>
                            <div class="img-overlay mb-3">
                                <img src="assets/img/portfolio-1.jpg" alt="Architecture" class="img-thumbnail">
                                <div class="img-hover">
                                    <p class="img-text">View Page</p>
                                </div>
                            </div>
                            <figcaption class="h5 font-weight-normal text-center">DevOps</figcaption>
                        </figure>
                    </a>
                </li>

                <li class="col-md-6 mb-3">
                    <a href="portfolio-2.html">
                        <figure>
                            <div class="img-overlay mb-3">
                                <img src="assets/img/portfolio-2.jpg" alt="Interior Design" class="img-thumbnail">
                                <div class="img-hover">
                                    <p class="img-text">View Page</p>
                                </div>
                            </div>
                            <figcaption class="h5 font-weight-normal text-center">Lean/Agile</figcaption>
                        </figure>
                    </a>
                </li>

                <li class="col-md-6 mb-3">
                    <a href="portfolio-3.html">
                        <figure>
                            <div class="img-overlay mb-3">
                                <img src="assets/img/portfolio-3.jpg" alt="Photography" class="img-thumbnail">
                                <div class="img-hover">
                                    <p class="img-text">View Page</p>
                                </div>
                            </div>
                            <figcaption class="h5 font-weight-normal text-center">Consultancy</figcaption>
                        </figure>
                    </a>
                </li>

                <li class="col-md-6 mb-3">
                    <a href="portfolio-4.html">
                        <figure>
                            <div class="img-overlay mb-3">
                                <img src="assets/img/portfolio-4.jpg" alt="Web Design" class="img-thumbnail">
                                <div class="img-hover">
                                    <div class="img-text">View Page</div>
                                </div>
                            </div>
                            <figcaption class="h5 font-weight-normal text-center">Computing History</figcaption>
                        </figure>
                    </a>
                </li>
            </ul>
            <div class="text-center my-5">
                <a href="pages.html" class="btn btn-outline-white">View all pages</a>
            </div>
        </div>

        <!-- Testimonials -->
        <div class="bg-white text-black">
            <div class="container py-6">
                <h2 class="h3 text-center mb-5">Testimonials</h2>
                <div class="row">
                    <div class="col-md">
                        <blockquote class="text-center mb-5 mb-sm-0">
                            <img src="assets/img/tim-schoch.jpg" class="avatar avatar-lg mb-3" alt="Tim Schoch">
                            <cite class="d-block h5 mb-1">Matthew Skelton</cite>
                            <span class="small text-muted text-uppercase">Conflux Digital</span>
                            <p class="quote text-muted mt-3 mb-0">He wrote half a book...eventually</p>
                        </blockquote>
                    </div>
                    <div class="col-md">
                        <blockquote class="text-center mb-5 mb-md-0">
                            <img src="assets/img/olive-mathews.jpg" class="avatar avatar-lg mb-3" alt="Olive Mathews">
                            <cite class="d-block h5 mb-1">Olive Mathews</cite>
                            <span class="small text-muted text-uppercase">Photographer</span>
                            <p class="quote text-muted mt-3 mb-0">Focus is great. I will refer everyone I know. This theme is worth much more than I paid. I'm loving it.</p>
                        </blockquote>
                    </div>

                    <div class="col-md">
                        <blockquote class="text-center">
                            <img src="assets/img/malan-alankara.jpg" class="avatar avatar-lg mb-3" alt="Malan Alankara">
                            <cite class="d-block h5 mb-1">Malan Alankara</cite>
                            <span class="small text-muted text-uppercase">Architect</span>
                            <p class="quote text-muted mt-3 mb-0">Not able to tell you how happy I am with Focus. It's exactly what I've been looking for.</p>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to action -->
        <div class="bg-primary text-dark text-center">
            <div class="container py-6">
                <h2 class="font-sans-serif">You like?</h2>
                <p class="lead mb-4">I write code...for you!</p>
                <a href="https://themes.getbootstrap.com/product/focus/" class="btn btn-outline-dark">Contact</a>
            </div>
        </div>
    </main>
    {% import 'macros/footer.njk' as footer -%}
    {{footer.footer('bg-white', 'text-dark')}}
{% endblock %}
